<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style type="bgu.dcr.az.cpu.client.wgt.AzButton.Style">
		.button {
			color: rgb(220, 220, 220);
			vertical-align: middle;
			margin-right: 10px;
			float: left;
			background-color: rgb(71,71,71);
			border-color: black;
		}
		
		.button .text {
			
		}
		
		.button:active {
			position: relative;
			top: 1px;
		}
		
		.active {
			background-color: rgb(51, 51, 51);
		}	
	</ui:style>
	<g:HTMLPanel styleName="az-button">
		<button class="{style.button}" vertical-align="middle"
			ui:field="button">
			<span class="{style.text} az-button-text" ui:field="text"> BUTTON </span>
		</button>
	</g:HTMLPanel>
</ui:UiBinder> 