<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:a="urn:import:java.awt"
	xmlns:p1="urn:import:com.google.gwt.user.cellview.client" xmlns:p2="urn:import:bgu.dcr.az.cpu.client.wgt">
	<ui:style>
		.important {
			font-weight: bold;
		}
		
		.algoTable {
			background-color: rgb(220,220,220) !important;
			width: 100%;
			height: 100%;
			color: Black;
			padding-left: 5px;
			padding-right: 5px;
		}
		
		.algoTable .algoTitle {
			height: 50px;
			font-weight: bold;
			font-size: 15px;
			font-family: "Lucida Sans Unicode", "Lucida Grande", sans-serif;
		}
		
		.algoTable .algoList {
			vertical-align: top;
			color: rgb(220,220,220);
			background-color: rgb(51,51,51);
			border: black 1px solid;
		}
		
		.algoTable .algoList .algoListScroll {
			overflow: auto;
			height: 100%;
			padding-left: 5px;
			padding-bottom: 5px;
		}
		
		.algoTable .algoButtons {
			border-top: 1px solid white;
			padding-top: 5px;
			height: 32px;
			padding-bottom: 3px;
		}
	</ui:style>
	<g:HTMLPanel>

		<table class="{style.algoTable}">
			<tr>
				<td class="{style.algoTitle}">
					<img style="vertical-align: middle" src="images/exp.png">
						Available Experiments
					</img>
				</td>
			</tr>
			<tr>
				<td class="{style.algoList}">
					<div class="{style.algoListScroll}">
						<p1:CellList ui:field="cellList" />
					</div>
				</td>
			</tr>
			<tr>
				<td class="{style.algoButtons}">
					<p2:AzButtonWithImg text="Add" src="images/plus.png" ui:field="addButton" />
					<p2:AzButtonWithImg text="Clear All" src="images/clearAll.png" ui:field="clearAllButton"/>
				</td>
			</tr>
		</table>

	</g:HTMLPanel>

</ui:UiBinder> 