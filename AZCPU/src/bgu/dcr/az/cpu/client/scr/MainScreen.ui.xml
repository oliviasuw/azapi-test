<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:p1="urn:import:bgu.dcr.az.cpu.client.wgt">
	<ui:style>
		@external .az-button-text;
		.body {
			background-color: rgb(51, 51, 51);
			margin: 0px;
			padding: 0px;
			background: url("images/bg/dark_stripes.png") repeat;
			border: none;
		}
		
		.body table {
			margin: 0px;
			border: none;
			border-spacing: 0px;
		}
		
		.noSpace {
			margin: 0px;
			padding: 0px;
		}
		
		.logo {
			padding: 5px;
		}
		
		.content {
			border: 3px rgb(120, 120, 120) double;
		}
		
		.contentWrapper {
			padding-bottom: 5px;
			padding-left: 5px;
			padding-right: 10px;
			padding-top: 5px;
		}
		
		.az-button-text {
			color: rgb(245,245,245);
			font-size: 16px;
			font-family: "Lucida Sans Unicode", "Lucida Grande", sans-serif;
			font-weight: bold;
		}
		
		.leftButton button {
			-webkit-border-top-left-radius: 25px;
			-khtml-border-radius-topleft: 25px;
			-moz-border-radius-topleft: 25px;
			border-top-left-radius: 25px;
			-webkit-border-bottom-left-radius: 25px;
			-khtml-border-radius-bottomleft: 25px;
			-moz-border-radius-bottomleft: 25px;
			border-bottom-left-radius: 25px;
			padding:5px;
			padding-left: 10px;
			margin:0px;
			margin-right: 1px;
			border: solid 2px rgb(91,91,91);
			
		}
		
		.rightButton button {
			-webkit-border-top-right-radius: 25px;
			-khtml-border-radius-topright: 25px;
			-moz-border-radius-topright: 25px;
			border-top-right-radius: 25px;
			-webkit-border-bottom-right-radius: 25px;
			-khtml-border-radius-bottomright: 25px;
			-moz-border-radius-bottomright: 25px;
			border-bottom-right-radius: 25px;
			padding:5px;
			padding-right: 10px;
			margin:0px;
			margin-right:15px;
			border:solid 2px rgb(91,91,91)
		}
		
	</ui:style>
	<g:HTMLPanel styleName="{style.body}" height="100%" width="100%">

		<table height="100%" width="100%" cellspacing="0px">
			<tr>
				<td width="100%">
					<g:Image url="images/logo2.png" styleName="{style.logo}" />
				</td>
				<td>
					<table>
						<tr>
							<td>
								<p1:AzButton ui:field="leftButton" styleName="{style.leftButton}" text="Management" pushButton="true" />
							</td>
							<td>
								<p1:AzButton ui:field="rightButton" styleName="{style.rightButton}" text="Executions" pushButton="true"/>
							</td>
						</tr>
					</table>
				</td>
			</tr>

			<tr height="100%" width="100%">
				<td height="100%" width="100%" colspan="2">
					<table height="100%" width="100%" class="{style.contentWrapper}">
						<tr height="100%" width="100%">
							<td height="100%" width="100%">
								<g:SimplePanel width="100%" height="100%"
									ui:field="content" styleName="{style.content}" />
							</td>
						</tr>
					</table>
				</td>
			</tr>
		</table>


	</g:HTMLPanel>
</ui:UiBinder> 