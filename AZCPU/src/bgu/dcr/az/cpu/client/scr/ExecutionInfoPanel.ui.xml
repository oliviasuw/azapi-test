<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:p2="urn:import:bgu.dcr.az.cpu.client.wgt">
	<ui:style>
		.infoTable{
			background-color: rgb(102,102,102) !important;
			width: 100%;
			height: 100%;
			padding-left: 10px;
			padding-right: 10px;
			margin-left: 20px;
		}
		
		.progress{
			padding: 10px;
			padding-left: 0px;
			font-weight: bold;
		}
		
		.progressBar{
			width: 50%;
			height: 7px;
			background-color: blue;
			border: 1px black solid;
		}
		
		.genInfo{
			border-bottom: 1px rgb(245,245,245) solid;
			padding: 5px;
			margin: 10px;
		}
		
		.execButtons {
			padding-top: 5px;
			height: 32px;
			padding-bottom: 3px;
		}
		
	</ui:style>
	<g:HTMLPanel >
		<table class="{style.infoTable}">
			<tr>
				<td class="{style.progress}">
					<span ui:field="executionsProgress"> Progress: 51/240 Executions </span>
				</td>
			</tr >
				
			<tr>
				<td >
					<span class="{style.progressBar}"> Progress Bar</span>
				</td>			
			</tr>
			<tr height="10px"></tr>
			<tr>
				<td class="{style.genInfo}">
					<span ui:field="runningExecution"> Execution x:</span>
					<br/>
					<span ui:field="problemData"> Problem: ....</span>
					<br/>
					<span ui:field="runnnigAlgorithm"> ALgorithm: ...</span>
					<br/>
					<span ui:field="timeWorking"> Time Running: ...</span>				
				</td>
			</tr>
			<tr>
				<td class="{style.progress}">
					<span> Execution Statistics </span>
				</td>
			</tr >
			<tr>
				<td class="{style.genInfo}">
					<span ui:field="runningTime"> Total running time:</span>
					<br/>
					<span ui:field="avgTime"> Avarage time per execution : ....</span>				
				</td>
			</tr>
			<tr height="100%"></tr>
			<tr>
				<td class="{style.execButtons}">
					<p2:AzButtonWithImg text="Stop" src="images/plus.png" ui:field="stopButton" />
					<p2:AzButtonWithImg text="Results" src="images/clearAll.png" ui:field="ResultsButton"/>
				</td>
			</tr>
		</table>
	</g:HTMLPanel>
</ui:UiBinder> 