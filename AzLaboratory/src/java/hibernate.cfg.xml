<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/agent_zero_lab</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password">true</property>
    <mapping resource="bgu/dcr/az/lab/data/Articles.hbm.xml"/>
    <mapping resource="bgu/dcr/az/lab/data/Experiments.hbm.xml"/>
    <mapping resource="bgu/dcr/az/lab/data/Tags.hbm.xml"/>
    <mapping resource="bgu/dcr/az/lab/data/ArticlesTags.hbm.xml"/>
    <mapping resource="bgu/dcr/az/lab/data/Users.hbm.xml"/>
    <mapping resource="bgu/dcr/az/lab/data/Comments.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
