<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:a="urn:import:java.awt"
	xmlns:p1="urn:import:com.google.gwt.user.cellview.client" xmlns:p2="urn:import:bgu.dcr.az.cpu.client.wgt">
	<ui:style>
		.important {
			font-weight: bold;
		}
		
		.machineInfo {
			background-color: rgb(220, 220, 220) !important;
			/*background-image: url("images/bg/worn_dots.png");*/
			background-repeat: repeat;
			width: 100%;
			height: 100%;
			color: Black;
			padding-left: 7px;
			padding-right: 3px;
			padding-top: 3px;
			padding-bottom: 3px;
		}
		
		.machineInfo .miTitle {
			height: 50px;
			width: 120px;
			font-weight: bold;
			font-size: 15px;
			font-family: "Lucida Sans Unicode", "Lucida Grande", sans-serif;
			padding-bottom: 20px;
		}
		
		.machineInfo .miBody {
			vertical-align: top;
			color: rgb(220, 220, 220);
			background-color: rgb(51, 51, 51);
			border: black 1px solid;
			padding: 100;
		}
		
		.machineInfo .miTitle .image {
			padding-left: 20px;
		}
		
		.algoTable .algoList .algoListScroll {
			overflow: auto;
			height: 100%;
			padding-left: 5px;
			padding-bottom: 5px;
		}
		
		.algoTable .algoButtons {
			border-top: 1px solid white;
			padding-top: 5px;
			height: 32px;
			padding-bottom: 3px;
		}
	</ui:style>
	<g:HTMLPanel>

		<table class="{style.machineInfo}">
			<tr>
				<td class="{style.miTitle}">
					<img class="{style.image}" src="images/hardinfo.png">
						Machine Info
					</img>
				</td>
				<td class="{style.miBody}">
					<span ui:field="machineInfo">
						Body
					</span>
				</td>
			</tr>
		</table>

	</g:HTMLPanel>

</ui:UiBinder> 