<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.portlet {
			margin: 3px;
			height: 100%;
			border: 2px white solid;
			background-color: rgb(21, 21, 21);
		}
		
		.caption td span {
			color: white;
			font-weight: bold;
			font-family: "Lucida Sans Unicode", "Lucida Grande", sans-serif;
			font-size: 16px;
		}
		
		.caption td {
			padding: 5px;
		}
		
		.caption {
			background-color: rgb(55, 55, 55);
		}
		
		.body table {
			background-color: rgb(91, 91, 91);
		}
		
		.body {
			 			
		}
	</ui:style>
	<g:HTMLPanel height="100%" width="100%" styleName="{style.body}">
		<table height="100%" width="100%">

			<tr class="{style.caption}">
				<td colspan="2">
					<span> Managment Screen </span>
				</td>
			</tr>

			<tr height="10px" />

			<tr height="60%">
				<td height="50%">
					<g:SimplePanel styleName="{style.portlet}" height="100%" />
				</td>

				<td height="50%">
					<g:SimplePanel styleName="{style.portlet}" height="100%" />
				</td>
			</tr>

			<tr height="6px">

			</tr>

			<tr height="40%">
				<td height="100%" colspan="2">
					<g:SimplePanel styleName="{style.portlet}" height="100%" />
				</td>
			</tr>
			
			<tr height="6px"/>
		</table>
	</g:HTMLPanel>
</ui:UiBinder> 